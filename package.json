{
  "name": "aurelia-ls",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17 <23"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "aurelia": "link:aurelia/packages/aurelia",
      "@aurelia/kernel": "link:aurelia/packages/kernel",
      "@aurelia/metadata": "link:aurelia/packages/metadata",
      "@aurelia/platform": "link:aurelia/packages/platform",
      "@aurelia/platform-browser": "link:aurelia/packages/platform-browser",
      "@aurelia/runtime": "link:aurelia/packages/runtime",
      "@aurelia/runtime-html": "link:aurelia/packages/runtime-html",
      "@aurelia/expression-parser": "link:aurelia/packages/expression-parser",
      "@aurelia/template-compiler": "link:aurelia/packages/template-compiler",
      "@aurelia/fetch-client": "link:aurelia/packages/fetch-client",
      "@aurelia/router": "link:aurelia/packages/router",
      "@aurelia/route-recognizer": "link:aurelia/packages/route-recognizer",
      "@aurelia/testing": "link:aurelia/packages/testing",
      "@aurelia/vite-plugin": "link:aurelia/packages-tooling/vite-plugin",
      "@aurelia/plugin-conventions": "link:aurelia/packages-tooling/plugin-conventions"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "clean": "node scripts/clean.mjs",
    "lint": "pnpm -w eslint \"packages/**/*.{ts,tsx,js,mjs,cjs}\"",
    "lint:fix": "pnpm -w eslint \"packages/**/*.{ts,tsx,js,mjs,cjs}\" --fix",
    "lint:vscode": "pnpm -w eslint \"packages/vscode/**/*.{ts,tsx,js,mjs,cjs}\"",
    "lint:language-server": "pnpm -w eslint \"packages/language-server/**/*.{ts,tsx,js,mjs,cjs}\"",
    "lint:compiler": "pnpm -w eslint \"packages/compiler/**/*.{ts,tsx,js,mjs,cjs}\"",
    "test": "pnpm -w build && vitest run",
    "test:watch": "pnpm -w build && vitest",
    "test:cov": "pnpm -w build && vitest run --coverage",
    "test:compiler": "pnpm -w build && vitest run packages/compiler",
    "test:compiler:cov": "pnpm -w build && vitest run packages/compiler --coverage",
    "test:10-lower": "pnpm -w build && vitest run packages/compiler/test/10-lower",
    "test:10-lower:cov": "pnpm -w build && vitest run packages/compiler/test/10-lower --coverage",
    "test:20-resolve": "pnpm -w build && vitest run packages/compiler/test/20-resolve",
    "test:20-resolve:cov": "pnpm -w build && vitest run packages/compiler/test/20-resolve --coverage",
    "test:30-bind": "pnpm -w build && vitest run packages/compiler/test/30-bind",
    "test:30-bind:cov": "pnpm -w build && vitest run packages/compiler/test/30-bind --coverage",
    "test:40-typecheck": "pnpm -w build && vitest run packages/compiler/test/40-typecheck",
    "test:40-typecheck:cov": "pnpm -w build && vitest run packages/compiler/test/40-typecheck --coverage",
    "test:overlay-plan": "pnpm -w build && vitest run packages/compiler/test/overlay/plan",
    "test:overlay-emit": "pnpm -w build && vitest run packages/compiler/test/overlay/emit",
    "test:aot-plan": "pnpm -w build && vitest run packages/compiler/test/aot/plan",
    "test:aot-emit": "pnpm -w build && vitest run packages/compiler/test/aot/emit",
    "test:integration": "pnpm -w build && vitest run packages/compiler/test/integration",
    "test:parsing": "pnpm -w build && vitest run packages/compiler/test/parsing",
    "test:program": "pnpm -w build && vitest run packages/compiler/test/program",
    "test:ssr": "pnpm -w build && vitest run packages/ssr",
    "test:ssr:cov": "pnpm -w build && vitest run packages/ssr --coverage",
    "test:ssg": "pnpm -w build && vitest run packages/ssg",
    "test:ssg:cov": "pnpm -w build && vitest run packages/ssg --coverage",
    "test:resolution": "pnpm -w build && vitest run packages/resolution",
    "test:resolution:cov": "pnpm -w build && vitest run packages/resolution --coverage",
    "test:transform": "pnpm -w build && vitest run packages/transform",
    "test:transform:cov": "pnpm -w build && vitest run packages/transform --coverage",
    "test:language-server": "pnpm -w build && vitest run packages/language-server",
    "test:language-server:cov": "pnpm -w build && vitest run packages/language-server --coverage",
    "test:vscode": "pnpm -w build && vitest run packages/vscode",
    "test:vscode:cov": "pnpm -w build && vitest run packages/vscode --coverage",
    "dump:overlay": "pnpm -w build && node scripts/dump-overlays.mjs",
    "fmt:vectors": "node scripts/fmt-json-vectors.mjs packages/compiler/test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.5.4",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.1",
    "globals": "^15.12.0",
    "typescript": "^5.5.4",
    "vitest": "^4.0.16"
  }
}
