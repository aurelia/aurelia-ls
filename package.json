{
  "name": "aurelia-ls",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "playground",
    "playground/*"
  ],
  "engines": {
    "node": ">=18.17 <23"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "aurelia": "link:aurelia/packages/aurelia",
      "@aurelia/kernel": "link:aurelia/packages/kernel",
      "@aurelia/metadata": "link:aurelia/packages/metadata",
      "@aurelia/platform": "link:aurelia/packages/platform",
      "@aurelia/platform-browser": "link:aurelia/packages/platform-browser",
      "@aurelia/runtime": "link:aurelia/packages/runtime",
      "@aurelia/runtime-html": "link:aurelia/packages/runtime-html",
      "@aurelia/expression-parser": "link:aurelia/packages/expression-parser",
      "@aurelia/template-compiler": "link:aurelia/packages/template-compiler",
      "@aurelia/fetch-client": "link:aurelia/packages/fetch-client",
      "@aurelia/router": "link:aurelia/packages/router",
      "@aurelia/route-recognizer": "link:aurelia/packages/route-recognizer",
      "@aurelia/testing": "link:aurelia/packages/testing",
      "@aurelia/i18n": "link:aurelia/packages/i18n"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "clean": "node scripts/clean.mjs",
    "lint": "pnpm -w eslint \"packages/**/*.{ts,tsx,js,mjs,cjs}\"",
    "lint:fix": "pnpm -w eslint \"packages/**/*.{ts,tsx,js,mjs,cjs}\" --fix",
    "lint:vscode": "pnpm -w eslint \"packages/vscode/**/*.{ts,tsx,js,mjs,cjs}\"",
    "lint:language-server": "pnpm -w eslint \"packages/language-server/**/*.{ts,tsx,js,mjs,cjs}\"",
    "lint:compiler": "pnpm -w eslint \"packages/compiler/**/*.{ts,tsx,js,mjs,cjs}\"",
    "test": "pnpm -w build && pnpm -w test:vitest",
    "test:watch": "pnpm -w build && vitest",
    "test:vitest": "cross-env AURELIA_RESOLUTION_STRIP_SOURCED_NODES=1 AURELIA_HARNESS_TRIM=1 vitest run --maxWorkers=4",
    "test:vitest:cov": "cross-env AURELIA_RESOLUTION_STRIP_SOURCED_NODES=1 AURELIA_HARNESS_TRIM=1 vitest run --maxWorkers=4 --coverage",
    "test:cov": "pnpm -w build && pnpm -w test:vitest:cov",
    "test:compiler": "pnpm -w build && pnpm -w test:vitest -- packages/compiler",
    "test:compiler:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/compiler",
    "test:10-lower": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/10-lower",
    "test:10-lower:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/compiler/test/10-lower",
    "test:20-resolve": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/20-resolve",
    "test:20-resolve:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/compiler/test/20-resolve",
    "test:30-bind": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/30-bind",
    "test:30-bind:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/compiler/test/30-bind",
    "test:40-typecheck": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/40-typecheck",
    "test:40-typecheck:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/compiler/test/40-typecheck",
    "test:overlay-plan": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/overlay/plan",
    "test:overlay-emit": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/overlay/emit",
    "test:aot-plan": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/aot/plan",
    "test:aot-emit": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/aot/emit",
    "test:integration": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/integration",
    "test:parsing": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/parsing",
    "test:program": "pnpm -w build && pnpm -w test:vitest -- packages/compiler/test/program",
    "test:ssr": "pnpm -w build && pnpm -w test:vitest -- packages/ssr",
    "test:ssr:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/ssr",
    "test:ssg": "pnpm -w build && pnpm -w test:vitest -- packages/ssg",
    "test:ssg:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/ssg",
    "test:resolution": "pnpm -w build && pnpm -w test:vitest -- packages/resolution",
    "test:resolution:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/resolution",
    "test:transform": "pnpm -w build && pnpm -w test:vitest -- packages/transform",
    "test:transform:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/transform",
    "test:language-server": "pnpm -w build && pnpm -w test:vitest -- packages/language-server",
    "test:ide": "pnpm -w build && pnpm -w test:vitest -- packages/language-server packages/semantic-workspace",
    "test:language-server:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/language-server",
    "test:vscode": "pnpm -w build && pnpm -w test:vitest -- packages/vscode",
    "test:vscode:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/vscode",
    "test:vite-plugin": "pnpm -w build && pnpm -w test:vitest -- packages/vite-plugin",
    "test:vite-plugin:cov": "pnpm -w build && pnpm -w test:vitest:cov -- packages/vite-plugin",
    "test:playground": "pnpm -w build && pnpm -w test:vitest -- --config playground/vitest.config.ts",
    "test:playground:watch": "pnpm -w build && vitest --config playground/vitest.config.ts",
    "dump:overlay": "pnpm -w build && node scripts/dump-overlays.mjs",
    "fmt:vectors": "node scripts/fmt-json-vectors.mjs packages/compiler/test packages/resolution/test/routes/vectors packages/resolution/test/integration/expected packages/resolution/test/apps/explicit-app/expected-graph.json packages/resolution/test/apps/routed-app/expected.json packages/integration-harness/test/snapshots"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.5.4",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "playwright": "^1.49.1",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.1",
    "globals": "^15.12.0",
    "typescript": "^5.5.4",
    "vite": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
