{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@locales/*": ["src/locales/*"]
    }
  },
  "include": ["src/**/*.ts", "*.test.ts"],
  "exclude": ["node_modules", "dist", "golden"]
}
