[
  {
    "name": "R-E-01 @click on <button> resolves to MouseEvent",
    "markup": "<button @click=\"go()\"></button>",
    "expect": {
      "items": [
        { "kind": "event", "to": "click", "type": "MouseEvent" }
      ]
    }
  },
  {
    "name": "R-E-02 click.capture sets capture flag",
    "markup": "<button click.capture=\"go()\"></button>",
    "expect": {
      "items": [
        { "kind": "event", "to": "click", "type": "MouseEvent", "capture": true }
      ]
    }
  },
  {
    "name": "R-E-03 @click:once carries modifier",
    "markup": "<button @click:once=\"go()\"></button>",
    "expect": {
      "items": [
        { "kind": "event", "to": "click", "type": "MouseEvent", "modifier": "once" }
      ]
    }
  },
  {
    "name": "R-E-04 unknown event produces aurelia/unknown-event",
    "markup": "<div @xyz=\"fn()\"></div>",
    "expect": {
      "items": [
        { "kind": "event", "to": "xyz", "type": "unknown" }
      ],
      "diags": [
        { "code": "aurelia/unknown-event" }
      ]
    }
  },
  {
    "name": "R-E-05 per-element event override: button@click -> PointerEvent",
    "semOverrides": {
      "events": {
        "byElement": {
          "button": {
            "click": { "kind": "ts", "name": "PointerEvent" }
          }
        }
      }
    },
    "markup": "<button @click=\"go()\"></button>",
    "expect": {
      "items": [
        { "kind": "event", "to": "click", "type": "PointerEvent" }
      ]
    }
  },
  {
    "name": "R-E-06 @input on <input> resolves to InputEvent",
    "markup": "<input @input=\"onInput()\">",
    "expect": {
      "items": [
        { "kind": "event", "to": "input", "type": "InputEvent" }
      ]
    }
  },
  {
    "name": "R-E-07 @keydown on <div> resolves to KeyboardEvent",
