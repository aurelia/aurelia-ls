[
  {
    "name": "TC-B-01 string literal to native string target produces contract",
    "markup": "<div textcontent.bind=\"'hi'\"></div>",
    "expect": {
      "expected": [
        { "code": "'hi'", "type": "string" }
      ],
      "contracts": [
        { "code": "'hi'", "type": "string", "context": "dom.property" }
      ]
    }
  },
  {
    "name": "TC-B-02 number literal to boolean target produces contract",
    "markup": "<div focus.bind=\"123\"></div>",
    "expect": {
      "expected": [
        { "code": "123", "type": "boolean" }
      ],
      "contracts": [
        { "code": "123", "type": "boolean", "context": "component.bindable" }
      ]
    }
  },
  {
    "name": "TC-B-03 duplicate expression/type pairs preserve cardinality",
    "markup": "<input value.bind=\"'same'\"><input value.bind=\"'same'\">",
    "expect": {
      "expected": [
        { "code": "'same'", "type": "string" },
        { "code": "'same'", "type": "string" }
      ],
      "contracts": [
        { "code": "'same'", "type": "string", "context": "dom.property" },
        { "code": "'same'", "type": "string", "context": "dom.property" }
      ]
    }
  },
  {
    "name": "TC-B-04 active.class keeps identifier expression semantics",
    "markup": "<div active.class=\"active\"></div>",
    "expect": {
      "expected": [
        { "code": "active", "type": "string" }
      ],
      "contracts": [
        { "code": "active", "type": "string", "context": "dom.attribute" }
      ]
    }
  },
  {
    "name": "TC-B-05 width.style keeps identifier expression semantics",
    "markup": "<div width.style=\"width\"></div>",
    "expect": {
      "expected": [
        { "code": "width", "type": "string" }
      ],
      "contracts": [
        { "code": "width", "type": "string", "context": "style.property" }
      ]
    }
  }
]
