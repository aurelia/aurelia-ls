[
  {
    "name": "TC-TM-01 string literal to string target",
    "markup": "<input value.bind=\"'hello'\">",
    "expect": {
      "expected": [
        { "code": "'hello'", "type": "string" }
      ],
      "contracts": [
        { "code": "'hello'", "type": "string", "context": "dom.property" }
      ]
    }
  },
  {
    "name": "TC-TM-02 number literal to string target (DOM context)",
    "markup": "<input value.bind=\"42\">",
    "expect": {
      "expected": [
        { "code": "42", "type": "string" }
      ],
      "contracts": [
        { "code": "42", "type": "string", "context": "dom.property" }
      ]
    }
  },
  {
    "name": "TC-TM-03 boolean literal to boolean target",
    "markup": "<input disabled.bind=\"true\">",
    "expect": {
      "expected": [
        { "code": "true", "type": "boolean" }
      ],
      "contracts": [
        { "code": "true", "type": "boolean", "context": "dom.property" }
      ]
    }
  },
  {
    "name": "TC-TM-08 if controller boolean contract",
    "markup": "<div if.bind=\"true\">shown</div>",
    "expect": {
      "expected": [
        { "code": "true", "type": "boolean" }
      ],
      "contracts": [
        { "code": "true", "type": "boolean", "context": "component.bindable" }
      ]
    }
  },
  {
    "name": "TC-TM-19 style property contract",
    "markup": "<div width.style=\"100\"></div>",
    "expect": {
      "expected": [
        { "code": "100", "type": "string" }
      ],
      "contracts": [
        { "code": "100", "type": "string", "context": "style.property" }
      ]
    }
  },
  {
    "name": "TC-TM-23 text content has unknown expected type",
    "markup": "<div>${42}</div>",
    "expect": {
      "expected": [
        { "code": "42", "type": "unknown" }
      ],
      "contracts": [
        { "code": "42", "type": "unknown", "context": "dom.property" }
      ]
    }
  },
  {
    "name": "TC-TM-12 multiple bindings with mixed contexts",
    "markup": "<input value.bind=\"'ok'\" disabled.bind=\"99\">",
    "expect": {
      "expected": [
        { "code": "'ok'", "type": "string" },
        { "code": "99", "type": "boolean" }
      ],
      "contracts": [
        { "code": "'ok'", "type": "string", "context": "dom.property" },
        { "code": "99", "type": "boolean", "context": "dom.property" }
      ]
    }
  }
]
