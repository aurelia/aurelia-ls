{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": "../../../../..",
    "paths": {
      "aurelia": ["aurelia/packages/aurelia/src"],
      "@aurelia/kernel": ["aurelia/packages/kernel/src"],
      "@aurelia/runtime-html": ["aurelia/packages/runtime-html/src"],
      "aurelia2-table": ["aurelia2-plugins/packages/aurelia2-table/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../../../../aurelia2-plugins/packages/aurelia2-table/src/**/*.ts"
  ]
}
