    "expect": {
      "frames": [
        { "label": "root", "parent": null, "kind": "root", "overlay": null, "origin": null }
      ],
      "locals": [
        { "frame": "root", "kind": "let", "name": "a" }
      ],
      "exprs": [
        { "kind": "expr", "code": "v", "frame": "root" }
      ],
      "diags": []
    }
  },
