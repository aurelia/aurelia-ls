{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Aurelia",
  "scopeName": "text.html.aurelia",
  "injectionSelector": "L:text.html",
  "patterns": [
    { "include": "#interpolation" },
    { "include": "#binding-attribute" },
    { "include": "#shorthand-attribute" }
  ],
  "repository": {
    "interpolation": {
      "name": "meta.template.expression.aurelia",
      "begin": "(\\$\\{)",
      "end": "(\\})",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.template-expression.begin.js" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.template-expression.end.js" }
      },
      "patterns": [
        { "include": "#expression" }
      ]
    },

    "binding-attribute": {
      "comment": "Dot-notation attributes: value.bind, repeat.for, click.trigger, etc.",
      "match": "(?<=\\s)([a-zA-Z_][\\w-]*(?:\\.[a-zA-Z_][\\w-]*)+)(?=\\s*=)",
      "captures": {
        "1": { "name": "entity.other.attribute-name.aurelia" }
      }
    },

    "shorthand-attribute": {
      "patterns": [
        {
          "comment": "Colon shorthand :property for property.bind",
          "match": "(?<=\\s)(:[a-zA-Z_][\\w-]*)(?=\\s*=)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.aurelia" }
          }
        },
        {
          "comment": "At shorthand @event for event.trigger",
          "match": "(?<=\\s)(@[a-zA-Z_][\\w-]*)(?=\\s*=)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.aurelia" }
          }
        }
      ]
    },

    "expression": {
      "patterns": [
        { "include": "#special-variables" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#operators" },
        { "include": "#identifiers" }
      ]
    },

    "special-variables": {
      "match": "\\$(index|first|last|even|odd|length|middle|this|parent|event|host)\\b",
      "name": "variable.language.aurelia"
    },

    "strings": {
      "match": "'[^']*'",
      "name": "string.quoted.single.js"
    },

    "numbers": {
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b",
      "name": "constant.numeric.js"
    },

    "constants": {
      "match": "\\b(true|false|null|undefined)\\b",
      "name": "constant.language.js"
    },

    "operators": {
      "match": "[=!<>]=?|[+\\-*/%]|&&|\\|\\||\\?\\??|\\.",
      "name": "keyword.operator.js"
    },

    "identifiers": {
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
      "name": "variable.other.js"
    }
  }
}
