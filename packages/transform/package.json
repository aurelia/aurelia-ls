{
  "name": "@aurelia-ls/transform",
  "version": "0.0.1",
  "description": "TypeScript source transformation for Aurelia AOT compilation",
  "type": "module",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "import": "./out/index.js"
    }
  },
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "files": [
    "out",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "node --test out/test/**/*.test.js",
    "clean": "rm -rf out"
  },
  "dependencies": {
    "@aurelia-ls/domain": "workspace:*",
    "@aurelia-ls/resolution": "workspace:*",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
