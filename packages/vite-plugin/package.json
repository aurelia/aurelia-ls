{
  "name": "@aurelia-ls/vite-plugin",
  "version": "0.2.0",
  "description": "Vite plugin for Aurelia with AOT compilation and SSR",
  "type": "module",
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "import": "./out/index.js",
      "types": "./out/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "test": "vitest run"
  },
  "dependencies": {
    "@aurelia-ls/compiler": "workspace:*",
    "@aurelia-ls/transform": "workspace:*",
    "@aurelia-ls/ssr": "workspace:*",
    "@aurelia-ls/ssg": "workspace:*",
    "@aurelia/kernel": "file:../../aurelia/packages/kernel",
    "@aurelia/runtime-html": "file:../../aurelia/packages/runtime-html"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "vite": "^6.0.0"
  }
}
