{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (with Hello World workspace)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
        "${workspaceFolder}/fixtures/hello-world"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode/out/**/*.js",
        "${workspaceFolder}/packages/language-server/out/**/*.js"
      ],
      "preLaunchTask": "build:vscode-extension"
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Integration Harness Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "packages/integration-harness/test/harness.integration.test.ts",
        "--threads=false"
      ],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "preLaunchTask": "build:tsc"
    }
  ]
}
